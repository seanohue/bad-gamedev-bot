#!/usr/bin/env ruby
# -*- mode: ruby -*-
require_relative '../lib/twitter-client'
require_relative '../lib/bot-runner'
require_relative '../lib/markov'

bot = BotRunner.new(TwitterClient.new)
markov = Markov.new

bot.get_timeline.each do |s|
  markov.add_str_to_dict s
end

bot.get_twitter_sources.each do |s|
  markov.add_str_to_dict s
end

markov.add_bad_ideas

nonsense = markov.get_sentence_from_dict 2

bot.send(nonsense)
